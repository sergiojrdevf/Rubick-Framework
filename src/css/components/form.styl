.input-group fieldset {
	border: 0;
}

.input-group label {
	display: inline-block;
    font-size: 20px;
    color: #636363;
    font-weight: lighter;
    vertical-align: top;
    display: block;  
} 

.input-group fieldset legend { 
	display: none;
}

.input-group {
	margin-bottom: 20px;
	.label {
		display: inline-block;
	    font-size: 20px;
	    color: #636363;
	    font-weight: lighter;
	    vertical-align: top;
	    display: block;
	}
	.input {
	    display: block;
	    width: 100%;
	    padding: 9px 5px;
	    border: 1px solid #d0d0d0;
	    border-radius: 2px;
	    background: #fff;
	    font-size: 18px;
	    margin-bottom: 20px;
	}
	select {
 		height: 44px;
	}
	input[type=checkbox] + label   {
	    width: 20px;
	    height: 20px;
	    display: block;
	    border: 2px solid #656565;
	    border-radius: 2px;
	    font-size: 0;
	    position: relative
	}
	input[type=checkbox]:checked + label {
		&:after {
		    content: '';
		    width: 12px;
		    height: 12px;
		    background: #656565;
		    position: absolute;
		    top: 2px;
		    left: 2px;
		    border-radius: 2px;
		}
	}
	input[type=radio] + label  {
	    width: 22px;
	    height: 22px;  
	    background: #fff;
	    display: inline-block;
	    border-radius: 50%;
	    border: 2px solid #656565;
	    position: relative 
	}
	input[type=radio]:checked + label {
		&:after {
		    content: '';
		    width: 14px;
		    height: 14px;
		    background: #656565;
		    position: absolute;
		    top: 2px;
		    left: 2px;
		    border-radius: 50%;
		}
	}
}
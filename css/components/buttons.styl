$blue = #0295fe;

.btn {
	padding: 10px 12px;
	border-radius: 1px;
	color: #fff;
	font-size: 14px;
	border: 0;
	border: 1px solid #3e3e3e;
	color: #3e3e3e;
	background: #fff;
	text-transform: uppercase;
	box-shadow: 1px 1px 3px #989898;
}
.btn.primary {
	background: lightness($blue, 50%);
	border: 0;
	color: #fff;
	&:hover {
		background lightness($blue, 40%);
	}
	&:focus {
		background: lightness($blue, 30%);
	}
}

.btn.primary-dark {
	background: lightness($blue, 40%);
	border: 0;
	color: #fff;
	&:hover {
		background lightness($blue, 30%);
	}
	&:focus {
		background: lightness($blue, 20%);
	}
}

.btn.primary-light {
	background: lightness($blue, 60%);
	border: 0;
	color: #fff;
	&:hover {
		background lightness($blue, 50%);
	}
	&:focus {
		background: lightness($blue, 40%);
	}
}




.btn.alert {
	background: #fe0202;
	border: 0;
	color: #fff;
}